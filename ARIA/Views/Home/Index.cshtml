@{
    ViewBag.Title = "ARIA";
}
<h1>Simple Calculator</h1>

<div ng-controller="CalcCtrl" class="row-fluid center">
    <div class="calcbody">
        <!-- Calculator Display -->
        <div class="thinborder">
            <!-- Display is bound to scope variables in app.js -->
            <p class="output" name="output">
                {{output}}
                <br>{{operationToken}}
            </p>
        </div>
        <div class="calcbuttons">
            <!-- Buttons all have ng-click directives that call functions in app.js
        -->
            <button name="btn1" class="numbtn" value="1" ng-click='updateOutput(1)'>1</button>
            <button name="btn2" class="numbtn" value="2" ng-click='updateOutput(2)'>2</button>
            <button name="btn3" class="numbtn" value="3" ng-click='updateOutput(3)'>3</button>
            <button name="btnMinus" class="opbtn" ng-click='subtract()'>-</button>
            <br>
            <button name="btn4" class="numbtn" value="4" ng-click='updateOutput(4)'>4</button>
            <button name="btn5" class="numbtn" value="5" ng-click='updateOutput(5)'>5</button>
            <button name="btn6" class="numbtn" value="6" ng-click='updateOutput(6)'>6</button>
            <button name="btnPlus" class="opbtn" ng-click='add()'>+</button>
            <br>
            <button name="btn7" class="numbtn" value="7" ng-click='updateOutput(7)'>7</button>
            <button name="btn8" class="numbtn" value="8" ng-click='updateOutput(8)'>8</button>
            <button name="btn9" class="numbtn" value="9" ng-click='updateOutput(9)'>9</button>
            <button name="btnDivide" class="opbtn" ng-click='divide()'>/</button>
            <br>
            <button name="btn0" class="numbtn" value="0" ng-click='updateOutput(0)'>0</button>
            <button name="btnClear" class="clrbtn" ng-click='clear()'>CLEAR</button>
            <button name="btnMultiply" class="opbtn" ng-click='multiply()'>*</button>
            <button name="btnEquals" class="opbtn eqbtn" ng-click='calculate()'>=</button>
                
        </div>
    </div>
    
    <div class="outputdiv">
        <h4>Global Variables</h4>
        <p>
            <label>pendingOperation: </label>{{pendingOperation}}
            <br><label>lastOperation: </label>{{lastOperation}}
            <br><label>runningTotal: </label>{{runningTotal}}
            <br><label>pendingValue: </label>{{pendingValue}}
            <br><label>newNumber: </label>{{newNumber}}
        </p>
    </div>
</div>